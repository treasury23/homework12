{% extends "::base.html.twig" %}

{% block title %}Blog{% endblock %}
{% block body %}
    <div class="wrapper">
        {{ wo_render_breadcrumbs() }}
    {% for article in articles %}
            <div class="article-post">
                <div class="title"><a href="#">{{ article.title }}</a>
                    <div class="category">Category: <a href="#">{{ article.categoryArticle.title }}</a></div>
                </div>
                <div class="post-date">Published at {{ article.getCreated()| date("Y-m-d")  }}</div>
                <div class="img_float"><img class="img-thumbnail" src="{{ article.image.path | imagine_filter('my_thumb')  }}"></div>
                <div>{{ article.description | limitSymbol(400) }}</div>
                <div class="category">Tags:
                {% for tag in article.tags %}
                    <span class="label label-info">{{ tag.title }}</span>
                {% endfor %}
                </div>
            </div>

    {% endfor %}
    </div>
        <div class="sidebar">
            <div class="article">
                <div class="title">Last Articles</div>
                {% for last_article in last_articles %}
                    <div class="title-article"><a href="#">{{ last_article.title }}</a></div>
                {% endfor %}
            </div>
            <div class="mostview-article">
                <div class="title">Most viewed Articles</div>
            </div>
            <div class="post-guestbook">
                <div class="title">Last post from questbook</div>
                {% for last_post in last_posts %}
                    <div class="title-article"><a href="#">{{ last_post.name }}</a></div>
                {% endfor %}
            </div>
            <div class="tags">
                <div class="title">Tags</div>
                {% for tag, weight in tags %}
                    <span class="weight-{{ weight }}">{{ tag }}</span>
                {% else %}
                    <p>There are no tags</p>
                {% endfor %}
            </div>
        </div>
{% endblock body %}
